{
  "name": "near-sdk",
  "version": "1.2.1",
  "repository": {
    "type": "git",
    "url": "git+https://github.com:near/near-sdk-as"
  },
  "author": "Willem Wyndham <willem@nearprotocol.com>",
  "license": "(MIT AND Apache-2.0)",
  "scripts": {
    "build": "yarn workspaces run build",
    "build:vm": "yarn workspace near-mock-vm run build:wasm",
    "test": "yarn workspaces run test && yarn check:pretty",
    "doc": "rm -rf docs; typedoc assembly --tsconfig assembly/tsconfig.json && touch docs/.nojekyll",
    "prettify": "prettier --write '**/*.ts'",
    "check:pretty": "yarn prettier --check '**/*.ts'"
  },
  "devDependencies": {
    "@types/jest": "^26.0.0",
    "@types/js-base64": "^3.0.0",
    "@types/node": "^14.6.2",
    "husky": "^4.2.5",
    "jest": "^26.4.2",
    "prettier": "^2.1.1",
    "ts-jest": "^26.3.0"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn check:pretty || (yarn prettify && exit 1)"
    }
  },
  "workspaces": [
    "bindgen",
    "sdk",
    "sim",
    "nearcore-tests",
    "near-mock-vm"
  ],
  "private": true
}
